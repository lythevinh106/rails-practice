<% flash.each do |name, msg| %>
  <!--      <div class="alert <%#= format_alert(name) %>" role="alert">-->
  <%#= msg %>
  <!--      </div>-->
  <div class="toast-container position-absolute  animate__animated animate__fadeInLef   end-0 top-0 ">
    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true">
      <div class="toast-header <%= format_alert(name)[:header_color] %> show">
        <img src="https://colorlib.com/polygon/cooladmin/images/icon/logo.png" class="rounded me-2"
             style="height: 35px;width: auto" alt="...">
        <strong class="ms-auto "><%= format_alert(name)[:header_msg] %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        <%= msg %>
      </div>
    </div>

  </div>

<% end %>